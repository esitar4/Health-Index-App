<ul class="pagination">

    @if (PageNumber > 1) 
    {
        <li class="page-item">
            <a class="page-link" @onclick="() => changePage(-1)">Previous</a>
        </li>
    } else
    {
        <li class="page-item disabled">
            <a class="page-link" @onclick="() => changePage(-1)">Previous</a>
        </li>
    }


    @if ((PageNumber - 1) >= 1)
    {
        <li class="page-item">
            <a class="page-link" @onclick="() => changePage(-1)">@(PageNumber - 1)</a>
        </li>
    } else
    {
        <li class="page-item disabled">
            <a class="page-link" @onclick="() => changePage(-1)">-</a>
        </li>
    }

    <li class="page-item active">
        <a class="page-link">@PageNumber <span class="sr-only">(current)</span></a>
    </li>

    @if ((PageNumber + 1) <= MaxPage)
    {
        <li class="page-item">
            <a class="page-link" @onclick="() => changePage(1)">@(PageNumber + 1)</a>
        </li>
    } else
    {
        <li class="page-item disabled">
            <a class="page-link" @onclick="() => changePage(1)">-</a>
        </li>
    }

    @if (PageNumber < MaxPage)
    {
        <li class="page-item">
            <a class="page-link" @onclick="() => changePage(1)">Next</a>
        </li>
    } else
    {
        <li class="page-item disabled">
            <a class="page-link" @onclick="() => changePage(1)">Next</a>
        </li> 
    }
</ul>

<style>
    .pagination-button {
        width: 35px;
    }
    .page-item {
        cursor: pointer;
    }
</style>