@page "/admin"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using health_index_app.Shared

@attribute [Authorize(Roles = "Admin")]


<h3>Admin</h3>

@code {

}

<div class="row">
    <div class="col-auto">
        <label> Add user to admin</label>
        <input type="text" class="form-control" @bind-value="userIdAddAdmin"/>
        
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-light" @onclick="PostAdminUser">Submit</button>
    </div>
</div>

<div class="row">
    <div class="col-auto">
        <label> Unlock user account</label>
        <input type="text" class="form-control" @bind-value="userIdUnlock"/>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-light" @onclick="PostUnlockAccount">Submit</button>
    </div>
</div>

<div class="row">
    <div class="col-auto">
        <label> Delete user account</label>
        <input type="text" class="form-control" @bind-value="userIdDelete"/>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-light" @onclick="PostDeleteAccount">Delete Account</button>
    </div>
</div>

<div class="row">
    <div class="col-auto">
        <label> Child user id</label>
        <input type="text" class="form-control" @bind-value="userIdChild"/>
    </div>
    <div class="col-auto"> 
         <label> Parent user id</label>
         <input type="text" class="form-control" @bind-value="userIdParent"/>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-light" @onclick="PostAddParentChildRelationship">Submit</button>
    </div>
</div>
